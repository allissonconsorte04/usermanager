<h1>Usuários</h1>
<p><%= link_to 'Novo usuário', new_backoffice_user_path %></p>
<table class="table">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Email</th>
      <th>Avatar</th>
      <th>Role</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.first_name %> <%= user.last_name %></td>
        <td><%= user.email %></td>
        <td><%= image_tag(user.avatar.url) if user.avatar? %></td>
        <td><%= user.role %></td>
        <td><%= link_to 'Mostrar', backoffice_user_path(user) %></td>
        <td><%= link_to 'Editar', edit_backoffice_user_path(user), class: 'btn btn-primary' %></td>
        <td><%= button_to 'Excluir', backoffice_user_path(user), method: :delete, data: { confirm: 'Tem certeza?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>


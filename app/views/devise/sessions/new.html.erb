<div class="container" style="height: 100%;">
  <div class="row" style="height: 100%;">
    <div class="col-md-6 mx-auto my-auto">
      <div class="card">
        <div class="card-header">
          Log in
        </div>
        <div class="card-body">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="mb-3">
              <%= f.label :email, class: "form-label" %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", id: "formGroupExampleInput", placeholder: "email@email.com" %>
            </div>
            <div class="mb-3">
              <%= f.label :password, class: "form-label" %><br />
              <%= f.password_field :password, autocomplete: "current-password", class: "form-control", id: "formGroupExampleInput", placeholder: "Digite sua senha" %>
            </div>
            <% if devise_mapping.rememberable? %>
              <div class="field">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
            <% end %>
            <button type="submit" class="btn btn-primary">Log in</button>
          <% end %>
        </div>
      </div>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

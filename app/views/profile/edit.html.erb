<div class="container" style="height: 100%; padding-top: 2%;">
  <div class="row">
    <div class="col-md-12 mx-auto my-auto">
      <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
          <div>Editar Perfil</div>
        </div>
        <div class="card-body">
          <%= form_with(model: @user, url: profile_index_path, method: :put) do |form| %>
            <%= render 'form', form: form %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

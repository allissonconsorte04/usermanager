

<div>
  <div class="pt-2">
    <%= form.label :email, class: 'form-label' %>
    <%= form.email_field :email, class: 'form-control', id: 'email', placeholder: 'Ex.: name@example.com' %>
  </div>
  <% if @user.new_record? %>
  <div class="pt-2">
    <%= form.label :password, class: 'form-label' %>
    <%= form.password_field :password, class: 'form-control', id: 'password' %>
  </div>
  <div class="pt-2">
    <%= form.label :password_confirmation, class: 'form-label' %>
    <%= form.password_field :password_confirmation, class: 'form-control', id: 'password' %>
  </div>
  <% end %>
  <div class="pt-2">
    <%= form.label :first_name, class: 'form-label' %>
    <%= form.text_field :first_name, class: 'form-control', id: 'first_name', placeholder: 'Ex.: JoÃ£o' %>
  </div>

  <div class="pt-2">
    <%= form.label :last_name, class: 'form-label' %>
    <%= form.text_field :last_name, class: 'form-control', id: 'last_name', placeholder: 'Ex.: Silva' %>
  </div>





<div style="pt-2; display: flex; justify-content: center; align-items: center; flex-direction: column">
  <div style="margin-top: 25px; text-align: center;">
    <label>My Avatar</label><br>
    <%= image_tag(@user.avatar_url ? @user.avatar_url : 'no-profile-picture-icon', size: '200x200', class: 'rounded-circle') %><br>
    <%= form.file_field :avatar, style: 'margin-top: 15px;' %>
  </div>
  <div style="margin-top: 25px; text-align: center;">
    <label>
      <%= form.check_box :remove_avatar %>
      Remove avatar
    </label>
  </div>
</div>





